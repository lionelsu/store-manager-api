{
  "root": true,
  "env": {
    "es2020": true
  },
  "extends": "trybe-backend",
  "rules": {
    "sonarjs/no-duplicate-string": [
      "error",
      5
    ],
    "sonarjs/prefer-object-literal": "off",
    "mocha/no-setup-in-describe": "off"
  },
  "overrides": [
    {
      "files": ["tests/**/*.test.js"],
      "rules": {
        "max-len": "off"
      }
    },
    {
      "files": ["src/docs/swagger.js"],
      "rules": {
        "max-len": "off"
      }
    }
  ]
}
