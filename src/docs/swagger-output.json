{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Store Manager API",
    "description": "<p><strong>Store Manager</strong> is a <strong>RESTful API</strong> offering comprehensive <strong>CRUD</strong> functionality for <strong>sales management</strong>, specifically <strong>drop shipping</strong>. Developed with <strong>TDD</strong> methodology, it follows a layered architecture (<strong>MSC</strong>).</p>",
    "contact": {
      "email": "contatolionelsu@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001/"
    },
    {
      "url": "https://localhost:3001/"
    }
  ],
  "tags": [
    {
      "name": "Products",
      "description": "Endpoints"
    }
  ],
  "paths": {
    "/products/search": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Search a product by name",
        "description": "Endpoint to retrieve products based on a search query.",
        "parameters": [
          {
            "name": "q",
            "description": "Search query string to filter products.",
            "required": true,
            "allowEmptyValue": true,
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns a list of products based on the search criteria. If the search is empty, it returns a list of all available products.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Products"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Products"
                }
              }
            }
          }
        }
      }
    },
    "/products/": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Get all products",
        "description": "Endpoint to retrieve all products.",
        "responses": {
          "200": {
            "description": "Returns a list with all products.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Products"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Products"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Add a new product",
        "description": "This endpoint allows you to add a new product to the system.",
        "responses": {
          "201": {
            "description": "Product created successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "number"
                    },
                    "name": {
                      "type": "string",
                      "example": "string"
                    }
                  },
                  "xml": {
                    "name": "main"
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "number"
                    },
                    "name": {
                      "type": "string",
                      "example": "string"
                    }
                  },
                  "xml": {
                    "name": "main"
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "description": "New product data.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Anel do Lanterna Verde"
                  }
                }
              }
            },
            "application/xml": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Anel do Lanterna Verde"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Get a product by id",
        "description": "Endpoint to retrieve a product by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Product ID."
          }
        ],
        "responses": {
          "200": {
            "description": "Returns a product by ID.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Products/items"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Products/items"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Products"
        ],
        "summary": "Update a product",
        "description": "This endpoint allows you to update a product in the system.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the product to be  "
          }
        ],
        "responses": {
          "200": {
            "description": "Product updated successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "number"
                    },
                    "name": {
                      "type": "string",
                      "example": "string"
                    }
                  },
                  "xml": {
                    "name": "main"
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "number"
                    },
                    "name": {
                      "type": "string",
                      "example": "string"
                    }
                  },
                  "xml": {
                    "name": "main"
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "description": "Updated product data.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Martelo do Batman"
                  }
                }
              }
            },
            "application/xml": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Martelo do Batman"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Products"
        ],
        "summary": "Delete a product",
        "description": "This endpoint allows you to delete a product in the system.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the product to be deleted"
          }
        ],
        "responses": {
          "204": {
            "description": "No content."
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    },
